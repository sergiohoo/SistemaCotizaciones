@model SistemaCotizaciones.Model.Quote

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar</h2>

<h4>¿Está seguro que desea eliminar este elemento?</h4>
<div>
    <h4>Quote</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fabricante)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fabricante.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContactoFabricante)
        </dt>
        @{
            var contacto = Model.ContactoFabricante.Nombre + " " + Model.ContactoFabricante.Apellido;
        }
        <dd class = "col-sm-10">
            @contacto
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroQuote)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumeroQuote)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreOportunidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreOportunidad)
        </dd>
        @{
            var fecha = Model.FechaEmision.ToString("dd/MM/yyyy");
        }
        <dt class = "col-sm-2">
            @fecha
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaEmision)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="QuoteId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver al listado</a>
    </form>
</div>
