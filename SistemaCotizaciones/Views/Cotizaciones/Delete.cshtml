@model SistemaCotizaciones.Model.Cotizacion

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar</h2>

<h4>¿Está seguro que desea eliminar este elemento?</h4>
<div>
    <h4>Cotizacion</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.NombreUsuario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quote)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quote.NumeroQuote)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Canal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Canal.RazonSocial)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClienteFinal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClienteFinal.RazonSocial)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CotizacionId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver al listado</a>
    </form>
</div>
