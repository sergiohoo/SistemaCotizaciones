            <td class="bg-dark text-white text-center">Total</td>
            <td></td>
        </tr>

        @{
            var counter = 0;
            foreach (var material in Model.cotizacion.MaterialesCotizacion)
            {
                counter++;

                <tr>
                    <td class="text-right">@counter.ToString()</td>
                    <td class="text-right">@material.Cantidad</td>
                    <td style="white-space:nowrap;">@material.Material.Nombre</td>
                    <td>@material.Material.Descripcion</td>
                    <td>@material.Material.NumeroSerie</td>
                    <td style="white-space:nowrap;" class="text-center">@material.FechaInicio?.ToString("dd/MM/yyyy").Replace("-","/") - @material.FechaTermino?.ToString("dd/MM/yyyy").Replace("-","/")</td>
                    <td class="text-right">@material.PrecioCliente?.ToString("N0")</td>
                    <td class="text-right">@material.TotalNeto?.ToString("N0")</td>
                    <td></td>
                </tr>
            }

            var iva = Math.Round(Model.cotizacion.TotalNeto * 0.19);
        }
