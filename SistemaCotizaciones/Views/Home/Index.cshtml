@{
    ViewData["Title"] = "Sistema de Cotizaciones";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<form class="row" asp-action="Login">
    <div class="col-md-4 offset-md-4 col-sm-12">
        <label>Nombre de usuario</label>
        <input type="text" name="user" class="form-control" /></div>
    <div class="offset-md-4"></div>
    <div class="col-md-4 offset-md-4 col-sm-12">
        <label>Contraseña</label>
        <input type="password" name="pass" class="form-control" /></div>
    <div class="offset-md-4"></div>
    <div class="col-md-4 offset-md-4 col-sm-12 mt-2">
        <input type="submit" value="Ingresar" class="btn btn-success" /></div>
</form>

